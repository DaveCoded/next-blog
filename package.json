{
    "name": "blog-portfolio",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "next lint",
        "dev": "next dev",
        "build": "npm run prebuild && npm run fonts:fetch && next build",
        "prebuild": "ts-node ./scripts/post-links.ts",
        "postbuild": "ts-node ./scripts/build-search.ts",
        "start": "next start",
        "export": "npm run build && next export && npm run postbuild",
        "fonts:fetch": "wget -O Fonts.zip $SECRET_FONTS_URL; unzip Fonts.zip -d ./public; rm Fonts.zip"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "dependencies": {
        "@mdx-js/loader": "^1.6.22",
        "@tippyjs/react": "^4.2.5",
        "algoliasearch": "^4.10.5",
        "dotenv": "^10.0.0",
        "eslint-config-prettier": "^8.3.0",
        "gray-matter": "^4.0.2",
        "lightgallery": "^2.5.0",
        "mdx-prism": "^0.3.1",
        "next": "^12.1.0",
        "next-mdx-remote": "^4.0.3",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "react-instantsearch-dom": "^6.12.1",
        "react-modal": "^3.14.3",
        "reading-time": "^1.5.0",
        "rehype-slug": "^4.0.1",
        "styled-components": "^5.3.1"
    },
    "devDependencies": {
        "@types/mdx-js__react": "^1.5.3",
        "@types/node": "^14.14.22",
        "@types/react": "^17.0.0",
        "@types/react-instantsearch-dom": "^6.12.0",
        "@types/react-modal": "^3.12.1",
        "@types/styled-components": "^5.1.14",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "eslint": "7.32.0",
        "eslint-config-next": "11.1.2",
        "husky": "^4.3.8",
        "prettier": "^2.4.1",
        "pretty-quick": "^3.1.0",
        "rehype": "^11.0.0",
        "ts-node": "^10.2.1",
        "typescript": "^4.1.3"
    },
    "resolutions": {
        "next/postcss": "8.3.5",
        "@types/react": "^17.0.0"
    }
}
